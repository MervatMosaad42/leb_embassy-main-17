<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <data>
        <!--list view -->
        <record id="contact_passport_tree" model="ir.ui.view">
            <field name="name">Contact Passport Tree</field>
            <field name="model">ebs_mod.contact.passport</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="family_member"/>
                    <field name="passport_no" />
                    <field name="passport_place"/>
                    <field name="passport_start_date" />
                    <field name="passport_exp_date" />
                    <field name="is_active" />
                </tree>
            </field>
        </record>

        <record id="contact_passport_form" model="ir.ui.view">
            <field name="name">Contact Passport Form</field>
            <field name="model">ebs_mod.contact.passport</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="family_member"/>
                                <field name="passport_no" />
                                <field name="passport_place"/>
                                <field name="passport_start_date" />
                                <field name="passport_exp_date" />
                                <field name="is_active" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>